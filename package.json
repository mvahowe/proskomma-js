{
  "name": "proskomma",
  "version": "0.9.3",
  "description": "A Scripture Runtime Engine",
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "test": "bash -c \"tape -r @babel/register test/code/*.cjs | node_modules/faucet/bin/cmd.js\"",
    "testUtils": "bash -c \"tape -r @babel/register test/code/utils/code/*.cjs | node_modules/faucet/bin/cmd.js\"",
    "rawTest": "tape -r @babel/register test/code/*.cjs",
    "oneTest": "tape -r @babel/register test/code/$TESTSCRIPT.cjs",
    "coverage": "node_modules/nyc/bin/nyc.js tape -r @babel/register test/code/*.cjs",
    "build": "rm -fr dist && webpack --mode production --config webpack.prod.js",
    "prepublishOnly": "rm -fr dist && npm run build",
    "serialize": "tape -r @babel/register test/code/serialize.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mvahowe/proskomma-js.git"
  },
  "keywords": [
    "USFM",
    "USX",
    "Scripture",
    "parser",
    "lexer"
  ],
  "author": "Mark Howe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mvahowe/proskomma-js/issues"
  },
  "homepage": "https://github.com/mvahowe/proskomma-js#readme",
  "dependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@graphql-tools/schema": "^10.0.2",
    "assert": "^2.1.0",
    "async-mutex": "^0.4.1",
    "base64-js": "^1.5.1",
    "bitset": "^5.1.1",
    "btoa": "^1.2.1",
    "checksum": "^1.0.0",
    "constants-browserify": "^1.0.0",
    "deep-copy-all": "^1.3.4",
    "deep-equal": "^2.2.3",
    "exceljs": "^4.4.0",
    "graphql": "^16.8.1",
    "jsonschema": "^1.4.1",
    "node-polyfill-webpack-plugin": "^3.0.0",
    "path-browserify": "^1.0.1",
    "pipeline-handler": "2.2.0",
    "proskomma-json-tools": "0.6.4",
    "pure-uuid": "^1.8.1",
    "sax": "^1.3.0",
    "stream": "0.0.2",
    "utf8-string-bytes": "^1.0.3",
    "util": "^0.12.5",
    "xregexp": "^5.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/preset-env": "^7.23.9",
    "@babel/register": "^7.23.7",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.0.6",
    "eslint-plugin-prettier": "^5.1.3",
    "faucet": "^0.0.4",
    "fs-extra": "^11.2.0",
    "nyc": "^15.1.0",
    "path": "0.12.7",
    "prettier": "^3.2.5",
    "process": "^0.11.10",
    "tape": "^5.7.4",
    "webpack": "5.90.1",
    "webpack-cli": "4.10.0"
  }
}
