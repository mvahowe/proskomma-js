{
  "name": "proskomma",
  "version": "0.1.24",
  "description": "A Model for Complex Text Documents such as Bibles",
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "test": "node_modules/tape/bin/tape test/code/*.js | node_modules/tap-summary/bin/cmd.js",
    "rawTest": "node_modules/tape/bin/tape test/code/*.js",
    "oneTest": "node_modules/tape/bin/tape test/code/$TESTSCRIPT.js",
    "coverage": "node_modules/nyc/bin/nyc.js node_modules/tape/bin/tape test/code/*.js | node_modules/tap-nyc/bin/cmd.js",
    "build": "babel src -d dist -s inline",
    "prepublishOnly": "rm -fr dist && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mvahowe/proskomma-js.git"
  },
  "keywords": [
    "USFM",
    "USX",
    "Scripture",
    "parser",
    "lexer"
  ],
  "author": "Mark Howe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mvahowe/proskomma-js/issues"
  },
  "homepage": "https://github.com/mvahowe/proskomma-js#readme",
  "dependencies": {
    "@babel/core": "^7.12.9",
    "base64-js": "^1.3.1",
    "graphql": "^15.3.0",
    "sax": "^1.2.4",
    "utf8-string-bytes": "^1.0.3",
    "uuid-base64": "^1.0.0",
    "xregexp": "^4.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/preset-env": "^7.12.7",
    "fs-extra": "^9.0.1",
    "nyc": "^15.1.0",
    "tap-nyc": "^1.0.3",
    "tap-summary": "^4.0.0",
    "tape": "^5.0.1"
  }
}